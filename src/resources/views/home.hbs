<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/locale/vi.min.js"></script>

<script>
    //cập nhật ngày tháng
    function updateDate() {
        //lấy ngày tháng hiện tại và định dạng nó
        const currentDate = moment().locale('vi').format('DD MMMM, YYYY');

        // Hiển thị ngày tháng 
        document.getElementById('current-date').textContent = currentDate;
    }

    updateDate();
    setInterval(updateDate, 3600000); // cập nhật lại sau 1 giờ
</script>
<div id="content" class="content">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item active">Đổi mật khẩu</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">
        Đổi mật khẩu </h1>
    <!-- end page-header -->

    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-4 offset-lg-4 ui-sortable">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <!-- begin panel-body -->
                <div class="panel-body">
                    <form action="#" method="post" data-parsley-validate="true" accept-charset="utf-8" novalidate="">
                        <div class="form-group">
                            <label>Email *</label>
                            <input value="gán email vào đây" type="email" name="email" placeholder="Hãy nhập email"
                                class="form-control" data-parsley-required="true">
                        </div>
                        <div class="form-group">
                            <label>Mật Khẩu Hiện Tại *</label>
                            <input type="password" name="old_password" placeholder="Hãy nhập mật khẩu hiện tại của bạn"
                                class="form-control" data-parsley-required="true">
                        </div>
                        <div class="form-group">
                            <label>Mật Khẩu Mới</label>
                            <input type="password" name="new_password" placeholder="Hãy nhập mật khẩu mới"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Nhập Lại Mật Khẩu Mới</label>
                            <input type="password" name="confirm_password" placeholder="Hãy nhập lại mật khẩu mới"
                                class="form-control">
                        </div>

                        <button type="submit" class="mb-sm btn btn-primary">Đổi Mật Khẩu</button>
                    </form> <!-- end panel-body -->
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
</div>